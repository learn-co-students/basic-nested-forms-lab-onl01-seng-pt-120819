<%= form_for @recipe do |f| %>

    <%= f.label "Recipe Title:" %>
  <%= f.text_field :title %> <br />

  <%= f.fields_for :ingredients do |ing| %> <br>

    <%= f.label :name %>
    <%= ing.text_field :name %> <br>

    <%= f.label :quantity %>
    <%= ing.text_field :quantity %> <br>

  <% end %>

 <%= f.submit %>
<% end %>
